{
    "compilerOptions": {
        // "outDir": "js", //biên dịch vào thư mục
        "target": "ES6",// cho phép biên dịch ts sang kiểu es6
        "module": "CommonJS", // commonjs là tiêu chuẩn được sử dụng trong Node.js để làm việc với các module
        "removeComments": true, //xóa comment khi biên dịch sang file js
        "esModuleInterop": true, //dùng được từ khóa import thay vì require
        "outDir": "dist", // biên dịch vào thư mục dist
    }
}